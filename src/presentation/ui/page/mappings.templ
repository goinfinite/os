		@htmx:after-request={ "$dispatch('" + MappingsRecordsDisplayRefreshEventName + "')" }
	>
		<input name="id" type="hidden" :value="mapping.id"/>
		@componentForm.InputFieldReadOnly("text", "hostname", "Virtual Host", "virtualHost.hostname", "")
