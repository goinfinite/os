templ UpdateMappingModal(installedServiceNames []string) {
	@componentStructural.RegularModal(
		"Update Mapping", "isUpdateMappingModalOpen", "closeUpdateMappingModal()", "mapping.id",
	) {
		@UpdateMappingForm(installedServiceNames)
	}
}
